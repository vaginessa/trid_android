<?xml version="1.0" encoding="utf-8"?>
<!-- @author:DengRenbin-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
    <!-- 顶部标题栏 -->
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/top_layout_height"
	    android:background="@color/touming"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	    <ImageButton
	        android:contentDescription="@string/app_name"
	        android:id="@+id/imabtn_settings_news_return"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_marginLeft="@dimen/top_bian_ju"
	        android:layout_marginStart="@dimen/top_bian_ju"
	        android:background="@color/touming"
	        android:src="@drawable/fanhui" />
	    
	    <!-- pagenameTextView -->
	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_centerHorizontal="true"
	        android:background="@color/touming"
	        android:text="消息"
	        android:textSize="@dimen/fontsize_large" 
	        android:textColor="@color/black"/>
	</RelativeLayout>
    
    <!-- 分隔线 -->
    <include layout="@layout/layout_line_long" />
    
    <!-- 接受新消息通知 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_settings_item"
        android:orientation="horizontal">
        <TextView
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:clickable="true"
	        android:gravity="center_vertical"
	        android:paddingLeft="@dimen/bianju_settings_item" 
	        android:text="接受新消息通知"
	        android:textColor="@color/black"
	        android:textSize="@dimen/content_fontsize" />
      	<ImageButton
	        android:id="@+id/imabtn_settings_news_receiveMessage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:background="@color/touming"
	        android:layout_marginRight="@dimen/bianju_settings_item"
	        android:layout_marginEnd="@dimen/bianju_settings_item"
	        android:src="@drawable/kaiguan_on" />
    </LinearLayout>
       
    <!-- 分隔线 -->
    <include layout="@layout/layout_line_long" />
    
	<!-- 绘制分隔线 -->
	<include layout="@layout/layout_line_long"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_line"
	    android:layout_marginTop="20dp" />
	
	<!-- 声音 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_settings_item"
	    android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/bianju_settings_item"
			android:text="声音"
			android:textColor="@color/black"
			android:textSize="@dimen/content_fontsize" />
		<ImageButton
			android:id="@+id/imabtn_settings_news_voice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/touming"
			android:layout_marginRight="@dimen/bianju_settings_item"
			android:layout_marginEnd="@dimen/bianju_settings_item"
			android:src="@drawable/kaiguan_off" />
	</LinearLayout>
	
    <!-- 分隔线 -->
    <include layout="@layout/layout_line_short" />
    
    <!-- 振动 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_settings_item"
	    android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:clickable="true"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/bianju_settings_item"
			android:text="振动"
			android:textColor="@color/black"
			android:textSize="@dimen/content_fontsize" />
		<ImageButton
			android:id="@+id/imabtn_settings_news_vibrance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/touming"
			android:layout_marginRight="@dimen/bianju_settings_item"
			android:layout_marginEnd="@dimen/bianju_settings_item"
			android:src="@drawable/kaiguan_on" />
	</LinearLayout>
	
    <!-- 分隔线 -->
    <include layout="@layout/layout_line_long" />
    
    <!-- 解释说明 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_news"
        android:textColor="@color/gray"
        android:textSize="@dimen/fontsize_xsmall"
        android:paddingLeft="@dimen/bianju_settings_item" 
        android:paddingRight="@dimen/bianju_settings_item" />
    
</LinearLayout>
